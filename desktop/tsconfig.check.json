{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,

    "strict": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictBuiltinIteratorReturn": true,
    "alwaysStrict": true,

    "noEmit": true,

    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": ["**/*.js"],
  "exclude": ["node_modules", "dist", "build"]
}
